          <div class="modal-header">
            <h2>Registeration</h2>
            <button type="button" class="close" data-dismiss="modal">
              &times;
            </button>
          </div>
          <!-- Modal body -->
          <div class="modal-body">
            <div class="modal-popup">
              <div class="user-modal">
                <h2><img src="img/user-icon.svg" />Aces Group</h2>

                <div class="registeration-div">
                  <div class="left-box">
                    <ul>
                      <li>
                        <input type="email" name="" placeholder="Email ID" />
                      </li>
                      <li>
                        <input type="number" name="" placeholder="Phone No." />
                      </li>
                      <li>
                        <span>Upload File</span
                        ><input
                          class="custom-file-input custom-file-input4"
                          type="file"
                          name="myfile"
                        />
                      </li>
                    </ul>
                  </div>

                  <div class="right-img">
                    <img src="img/right-img-popup.png" />
                  </div>
                  <div class="registeration-btn">
                    <button>REGISTER NOW</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

